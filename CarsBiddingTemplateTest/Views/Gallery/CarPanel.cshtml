@using CarsBiddingUsingBootstrap.Models.ViewModelClasses
@model IEnumerable<CarsInfoViewModel>
<div class="main">
    @foreach (CarsInfoViewModel car in Model)
    {
        <div class="col-sm-4 col-xs-6 gallry-agile-grids">
            <div class="view view-seventh">
                <a href="@Url.Content(car.MainPhoto)" class="b-link-stripe b-animate-go thickbox" title="@car.TypeOfCar">
                    <img src="@Url.Content(car.MainPhoto)" alt="Main Photo" />
                    <div class="mask">
                        <h4>@car.TypeOfCar @car.YearOfManufacture</h4>
                        <p>@CarsBiddingUsingBootstrap.Localization.Color:&nbsp;@car.ColorOfCar.ToLower()</p>
                        <p>@CarsBiddingUsingBootstrap.Localization.CurrentPrice:&nbsp;@car.CurrentPrice</p>
                        <div data-car-id="@car.CarId" onclick="details(this); return false"><span>@CarsBiddingUsingBootstrap.Localization.Details</span></div>
                    </div>
                </a>
            </div>
        </div>
    }
    <div class="clearfix"></div>
</div>
