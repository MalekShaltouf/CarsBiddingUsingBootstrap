@using CarsBiddingUsingBootstrap.Models.ViewModelClasses
@model List<NotificationHistoryViewModel>
@if (Model == null || Model.Count == 0)
{
    <li>
        <div class="text empty-Notification">
            <p>@CarsBiddingUsingBootstrap.Localization.ThereAre_ntAnyNotification_.</p>
        </div>
    </li>
}
else
{
    foreach (NotificationHistoryViewModel notificationHis in Model)
    {
        <li>
            <div onclick="window.location.href='/NotificationHistory/NotificationDetails/@(notificationHis.NotificationId)?NotificationSatus=@(Convert.ToInt32(notificationHis.NotificationStatus))'" class="notifications-item @(notificationHis.NotificationStatus == false ? "not-open-notification" : "")">
                <img src="@Url.Content(notificationHis.MainPhoto)" alt="Main img">
                <div class="text">
                    <p>@notificationHis.Eng_ArMessage</p>
                    <p><i class="fa fa-clock-o" aria-hidden="true"><span class="TimeSince-Span">@notificationHis.TimeSince</span></i></p>
                </div>
            </div>
        </li>
    }
}

