@model CarsBiddingUsingBootstrap.Models.ViewModelClasses.SignInViewModel
@{
    ViewBag.Title = CarsBiddingUsingBootstrap.Localization.SignIn;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="Sign-In">
        <div class="container">
            <h3 class="agileits-title PageHeading">@CarsBiddingUsingBootstrap.Localization.SignIn<span class="w3lshr-line"></span></h3>
            <div class="row formInputs">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="name">@CarsBiddingUsingBootstrap.Localization.UserName</label>
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="name">@CarsBiddingUsingBootstrap.Localization.Password</label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row text-center subscribe-agileinfo">
                <div class="col-md-12">
                    <button type="submit" class="sky-hover wthree-btn btn-6 scroll">@CarsBiddingUsingBootstrap.Localization.SignIn<span></span></button>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </section>
}

@section Scripts {
    <script src="~/Scripts/TemplateFromStyle.js"></script>
    <script>
        let requestType = "@ViewBag.RequestType",
            type = "@Model.Type",
            msg = "@Model.Msg";
        if (requestType == 'POST')
        {
            addNotification(type, msg);
            if (type == "@CarsBiddingUsingBootstrap.Localization.ERROR") {
                addNotEmptyClass();
            }
        }
    </script>
}
